@model BookstoreMVC.Models.Config


<div class="mt-5">
    <h2 class="text-center">Update Config value</h2>
    <div class="container ">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <form class="form-horizontal" asp-action="Edit">
                    <div class="form-group mt-2 mb-2">
                        <label class="control-label">ConfigKey:</label>
                        <input asp-for="ConfigKey" class="form-control " type="text" />
                        <span asp-validation-for="ConfigKey" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label class="control-label">ConfigValue:</label>
                        <input asp-for="ConfigValue" class="form-control " type="text" />
                        <span asp-validation-for="ConfigValue" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group d-flex justify-content-center m-3">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                    <div class="text-center m-3">
                        <a href="/Config/Index" class="btn btn-secondary">Back</a>
                    </div>

                </form>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>