@model IEnumerable<BookstoreMVC.Models.Order>
<div class="text-center m-3">
    <h3>My ordered books</h3>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
             
            
        </tr>
    </thead >
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td > @item.Title </td >
            <td > @item.Quantity </td >
           
           
        </tr>
        }
    </tbody >
</table >

  <div class="text-end m-3">
      <div>
          <label><b>Shipping :</b></label><span> @ViewBag.Shipping</span>
      </div>
      <div>
        <label><b>Discount(in %) :</b></label><span>@ViewBag.Discount</span>
      </div>
      <div>
        <label><b>Total Amount :</b></label>@ViewBag.Amount</span>
      </div>

  </div>



<div class="text-center">
    <a href="/Order/Index" class="btn btn-secondary">Back to Orders</a>
</div>

