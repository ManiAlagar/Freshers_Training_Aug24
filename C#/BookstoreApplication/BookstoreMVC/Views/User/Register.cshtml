@model BookstoreMVC.Models.User



<div class="mt-5">
    <h2 class="text-center">Registration Form</h2>
    <div class="container ">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <form class="form-horizontal"  method="Post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2 mb-2">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control " type="text" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control " type="text"  />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label asp-for="Username"  class="control-label"></label>
                        <input asp-for="Username" class="form-control " type="text"  />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control " type="email"  />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                     @* <div class="form-group mt-2 mb-2">
                         <label asp-for="Password"  class="control-label"></label>
                         <input asp-for="Password" class="form-control " type="password" minlength="6" maxlength="6" />
                         <span asp-validation-for="Password" class="text-danger"></span>
                     </div> *@
                    <div class="form-group mt-2 mb-2">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control " type="text"  />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label asp-for="ContactNo" class="control-label"></label>
                        <input asp-for="ContactNo" class="form-control " type="number" minlength="10" maxlength="10" />
                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label class="control-label">Role</label>
                        <select asp-for="RoleId" class="form-control" asp-items=@ViewBag.role>
                        </select>
                    </div>
                    <div class="form-group d-flex justify-content-center m-3">
                        <input type="submit" value="Register" class="btn btn-success" />
                    </div>
                    <div class="form-group d-flex justify-content-center mb-2">
                        <p>Already an user?</p>
                        <div>
                            <a href="/User/Login" class="btn-sm btn-info">Signin here</a>
                        </div>
                    </div>
                    
                </form>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('form').submit(function (e) {
            var data = $(this).serializeArray();
            var jsObj = {};
            $.each(data, function (field, value) {
                jsObj[value.name] = value.value;
            });

            $.ajax({
                url: "User/Register",
                method: "post",
                dataType: "json",
                data: jsObj,
                success: function (response) {
                    console.log(response);
                }
            });
            e.preventDefault();
        });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

