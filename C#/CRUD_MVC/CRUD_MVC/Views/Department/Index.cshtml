@{
}
@model IEnumerable<CRUD_MVC.Models.Department>




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    

</head>
<body>
    <h2 class="text-center">Department Details</h2>
     <div class="d-flex justify-content-between">
         <p>
             <a asp-action="Display" class="btn btn-success">Create New</a>
         </p>

     </div>

    <table class="table table-hover ">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </th>
			</tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>

                    
                    <td>
                        <a asp-action="Display" asp-route-id="@item.DepartmentId" class=" bi bi-pencil-square btn-sm btn-primary"></a>

                        <a class="bi bi-trash btn-sm btn-danger" id="delete" onclick="delFuncDept('@item.DepartmentId');"></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>


    

</body>

</html>

