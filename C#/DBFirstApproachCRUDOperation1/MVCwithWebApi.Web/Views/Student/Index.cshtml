@model IEnumerable<MVCwithWebApi.Web.Models.Student>

<p>
    <a asp-action="Display" asp-controller="Student"  class="  btn btn-primary">Create New</a>
</p>

<table class="table">
    <tdead>
        <tr>
            <th>StudentName</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </tdead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.Email</td>

                <td>
                    <a asp-action="Display" asp-controller="Student" asp-route-id="@item.StudentId" class=" bi bi-pencil-square btn-sm btn-primary"></a>
                      <a class="bi bi-trash btn-sm btn-danger" id="delete" onclick="delFunction('@item.StudentId');"></a>
                    @* <a class="bi bi-trash btn-sm btn-danger" asp-action="DeleteStudent" asp-controller="Student" id="delete" asp-route-id="@item.StudentId" ></a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    function delFunction(id) {
    let Id = parseInt(id);
    console.log(Id);
    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!"
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                type: "POST",
                url: "/Student/DeleteStudent/" + Id,
                contentType: "application/json;charset=UTF-8",
                success: function () {
                    setTimeout(myTimeout, 1000);
                    Swal.fire({
                        text: "Deleted", 
                        icon: "success",
                        showConfirmButton: false,
                        timer: 1500
                    });
                },
                error: function () {  
                    //alert("Error while deleting data");
                    Swal.fire({
                        text: "Error",
                        icon: "danger",
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            })
            
        }
    })
}

function myTimeout() {
    location.reload();
}


    </script>