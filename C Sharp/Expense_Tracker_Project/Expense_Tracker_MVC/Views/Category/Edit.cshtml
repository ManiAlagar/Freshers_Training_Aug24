
@model Expense_Tracker_MVC.Models.Category
@{
    ViewData["Title"] = @TempData["AddOrEdit"];
}
<h2>@TempData["AddOrEdit"]</h2>
<h4>Category Detail</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="CategoryID" />

        <form asp-controller="Category" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label mb-2"></label>
                <input asp-for="CategoryName" class="form-control"/>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary  btn-sm">
                <a class="btn btn-sm btn-danger" asp-controller="Category" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}